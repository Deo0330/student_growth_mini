.index_page {
  position: relative;
  z-index: -2;
  background-color: #ecf0f1;
}
.index_page .header {
  color: white;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
}
.index_page .header::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  z-index: -1;
  height: 600rpx;
  background-color: #192a56;
  clip-path: ellipse(65% 55% at top center);
}
.index_page .header navigator:last-child {
  align-self: center;
  background-color: #2f3640;
  opacity: 0.8;
  border-radius: 50%;
  padding: 20rpx;
}
.index_page swiper {
  margin: 20rpx;
  height: 160px;
}
.index_page swiper image {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20rpx;
  height: 150px;
  width: 95%;
  box-sizing: content-box;
}
.index_page .card {
  margin: 30rpx 0;
}
.index_page .tools_area {
  padding-top: 20rpx;
  display: flex;
  justify-content: space-evenly;
  align-content: flex-start;
  flex-wrap: wrap;
}
.index_page .tools_area view {
  margin: 20rpx;
}
.index_page .tools_area view text {
  font-size: small;
  text-align: center;
}
.index_page .footer_area {
  display: flex;
  margin-top: 50rpx;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 160rpx;
  background-color: #FFD4AB;
  color: black;
  font-size: small;
}
