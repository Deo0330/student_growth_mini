<!-- index.wxml -->
<view class="index_page">
  <view class="header">
    <navigator url="../../pages/setting/index" class="icon">
      <image />
      <span>个人中心</span>
    </navigator>
    <navigator url="../../pages/search/index" open-type="navigate">
      <iconfont name="chaxun" size="20" color="#fff" />
    </navigator>
  </view>
  <!-- 轮播图 -->
  <view class="swiper_area">
    <swiper indicator-dots autoplay interval="3000" duration="1000" circular>
      <swiper-item wx:for="{{swiperList}}" wx:key="id">
        <image src="{{item.src}}" mode="widthFix" />
      </swiper-item>
    </swiper>
  </view>
  <!-- 新闻区域 -->
  <Card title="新闻资讯" moreUrl="">新闻区域</Card>
  <!-- 工具栏区域 -->
  <Card title="学生服务" moreUrl="">
    <view class="tools_area">
      <view bind:tap="handleQueryScore">
        <iconfont name="datihuodong" size="50" />
        <text>成绩查询</text>
      </view>
      <navigator>
        <iconfont name="chengjiu" size="50" />
        <text>奖项申请</text>
      </navigator> 
      <navigator>
        <iconfont name="pingjia" size="50" />
        <text>学生评价</text>
      </navigator> 
      <navigator url="../../pages/process/index">
        <iconfont name="jindu" size="50" />
        <text>进度查询</text>
      </navigator>
      <navigator url="../../pages/patent/index">
        <iconfont name="jindu" size="50" />
        <text>奖学金申请</text>
      </navigator>
      <navigator url="../../pages/questions/index">
        <iconfont name="jindu" size="50" />
        <text>意见反馈</text>
      </navigator>
    </view>
  </Card>
  <Card title="问题反馈" moreUrl="">问题反馈区域</Card>
  <view class="footer_area">浙江工商大学智慧教育工作室</view>
</view>