<view class="tabs">
  <view class="tabs_title">
    <view 
    wx:for="{{tabs}}" 
    wx:key="id" 
    class="title_item {{item.isActive?'active':''}}"
    bindtap="handleItemSelect"
    data-index="{{index}}">
      {{item.name}}
    </view>
  </view>
  <view class="tabs_content">
    <!-- 
      slot标签就是一个占位符，当父组件传递数据过来，就会替换slot标签的位置
     -->
    <slot></slot>
  </view>
</view>